# BEECROWD--EVERYTHIMG
#include<stdio.h>
int main()
{
    int i =1,x,position;
    int max = -1;
    position = -1;
    while(i<=100)
    {
        scanf("%d",&x);
        if(max<x)
        {
            max = x;
            position = i;
        }
        i++;
    }
    printf("%d\n",max);
    printf("%d\n",position);
    return 0;
}
