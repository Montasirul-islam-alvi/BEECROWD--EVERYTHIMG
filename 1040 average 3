# BEECROWD--EVERYTHIMG
#include<stdio.h>
int main()
{
    float a,b,c,d,average,e,averagenew;
    scanf("%f %f %f %f",&a,&b,&c,&d);
    average = ((2*a)+(3*b)+(4*c)+(1*d))/(2+3+4+1);
    if(average>=7.0)
    {
        printf("Media: %.1lf\n",average);
        printf("Aluno aprovado.\n");
    }
    else if(average<5.0)
    {
        printf("Media: %.1lf\n",average);
        printf("Aluno reprovado.\n");
    }
    else if(average>=5.0&&average<=6.9)
    {
        printf("Media: %.1lf\n",average);
        printf("Aluno em exame.\n");
        scanf("%f",&e);
        printf("Nota do exame: %.1f\n",e);
        averagenew = (average+e)/2.0;
        if(averagenew>=5.0)
        {
            printf("Aluno aprovado.\n");
        }
        else if(averagenew<=4.9)
        {
            printf("Media: %.1lf\n",average);
            printf("Aluno reprovado.\n");
        }
        printf("Media final: %.1f\n",averagenew);

    }
    return 0;
}
