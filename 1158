# BEECROWD--EVERYTHIMG
#include<stdio.h>
int main()
{
    int n,i,x,y,j,sum,f;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        sum = 0;
        scanf("%d %d",&x,&y);
        f = 0;
        if(x%2==0)
        {
            f = 1;
        }
        if(f==1)
        {
            x+=1;
        }
        else
        {
            x=x;
        }
        for(j=1;j<=y;j++)
        {
            sum+=x;
            x = x+2;
        }
        printf("%d\n",sum);
    }
    return 0;
}
