# BEECROWD--EVERYTHIMG
#include<stdio.h>
int main()
{
    double a,b,c,perimeter,trapeziumarea;
    scanf("%lf %lf %lf",&a,&b,&c);
    if((a+b)>c&&(b+c)>a&&(c+a)>b)
    {
        perimeter = a+b+c;
        printf("Perimetro = %.1lf\n",perimeter);
    }
    else
    {
        trapeziumarea = ((1/2.0)*(a+b)*c);
        printf("Area = %.1lf\n",trapeziumarea);
    }
    return 0;
}
